<h1>Your Loan</h1>

<%= link_to 'View Schedule', loan_schedule_path(@loan, nil) %> | <%= link_to 'Make An Advance Payment', new_loan_advance_path(@loan) %>
<br/>&nbsp;<br/>

<p>
  <b>Start:</b>
  <%=h @loan.start %>
</p>

<p>
  <b>Principal:</b>
  <%=h @loan.principal %>
</p>

<p>
  <b>Interest:</b>
  <%=h @loan.annual_interest %>
</p>

<p>
  <b>Period:</b>
  <%=h @loan.compounding_periods %>
</p>
<p>
  <b>Repayment:</b>
  <%=h "R#{@loan.repayment}" %>
</p>
<p>
  <b>Total Paid:</b>
  <%=h "R#{@loan.total_payments}" %>
</p>

<br/>&nbsp;<br/>
