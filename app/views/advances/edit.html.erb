<h1>Editing advance</h1>

<% form_for(@advance) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :when %><br />
    <%= f.date_select :when %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @advance %> |
<%= link_to 'Back', advances_path %>
