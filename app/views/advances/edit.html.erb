<h1>Editing advance</h1>

<% form_for([@loan, @advance]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :when %><br />
    <%= f.date_select :when %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', loan_advance_path(@loan, @advance) %> |
<%= link_to 'Back', loan_advance_path(@loan, nil) %>
