<h1>New advance</h1>

<% form_for :advance, :url => {:action => 'create'} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :when %><br />
    <%= f.date_select :when %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', loan_advances_path(@loan) %>
